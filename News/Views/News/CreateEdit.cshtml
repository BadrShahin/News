@model News
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@*Create Shared View to create and edit news*@ 

<div class="card">
    <div class="card-body" style="padding: 15px 0;">
        <div class="text-right" style="padding-right: 10px;">
            <a asp-action="Index"><i class="glyphicon glyphicon-arrow-left text-success" style="height: 20px"></i> Back</a>
        </div>
        @if (Model != null)
        {
            <h3 class="text-center text-capitalize text-primary">edit news</h3>
        }
        else
        {
            <h3 class="text-center text-capitalize text-primary">add news</h3>
        }

        <div class="row">
            <div style="margin: 0 15px;">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <input type="hidden" asp-for="Id" />
                    }
                    <div class="col-md-5 form-group" style="display:block">
                        <label asp-for="Title" class="control-label" style="font-size: 20px; font-weight: 500"></label>
                        <input asp-for="Title" class="form-control" style="margin-left: 10px;" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 form-group" style="display: block">
                        <label asp-for="Content" class="control-label" style="font-size: 20px; font-weight: 500"></label>
                        <div style="margin-left: 10px;">
                            <textarea asp-for="Content" class="form-control" name="content" id="editor">
                            </textarea>
                        </div>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 form-group">
                        <label asp-for="Image" class="control-label" style="font-size: 20px; font-weight: 500"></label>
                        <br />
                        <div style="margin-left: 10px;">
                            @if (Model != null)
                            {
                                <img class="img-rounded" width="180" height="180" src="~/uploads/img/News/@Html.DisplayFor(modelItem => Model.Image)" />
                            }
                            <br /><br />
                            <label style="padding: 10px; background: #53a0e4; display: table; color: white; border-radius: 5px">
                                Add Image
                                <input asp-for="Image" type="file" accept="*/image" class="form-control" style="margin-left: 10px; display: none" />
                            </label>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    @if (Model != null)
                    {
                        <div class="col-md-12 form-group text-center">
                            <input type="submit" value=" Save " class="btn btn-default" style="color: white; background: #53a0e4; padding-left: 30px; padding-right: 30px" />
                        </div>
                    }
                    else
                    {
                        <div class="col-md-12 form-group text-center">
                            <input type="submit" value=" Add News " class="btn btn-default" style="color: white; background: #53a0e4; padding-left: 30px; padding-right: 30px" />
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</div>
